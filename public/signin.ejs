<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/main.css">
  <title>Document</title>
  <script>
    function init() {
      var success = <%= success %>;
      if (!success) {
        alert('<%= message%>')
      }
    }

    function fncSubmit() {
      var form = document.getElementById('signinForm');
      var userId = form.userid.value;
      var passWd = form.passwd.value;

      if(userId == ''){
        alert("아이디를 입력하세요.");
        return false;
      }
      if(passWd == ''){
        alert("비밀번호를 입력하세요.");
        return false;
      }
      form.submit();
    }
  </script>
</head>

<body onload="init();" class="text-center">
  <% include ./header.ejs %>

    <form id="signinForm" action="signin" method="post" class="form-signin">
      <h2 class="form-signin-heading">로그인</h2>
      <label for="userid" class="sr-only">아이디 : </label>
      <input type="text" id="userid" name="userid" placeholder="아이디" class="form-control" required autofocus/>
      <br/>
      <label for="passwd" class="sr-only">비밀번호 : </label>
      <input type="password" id="passwd" name="passwd" placeholder="비밀번호" class="form-control" required/>
      <br/>
      <a href="#" onclick="fncSubmit(); return false;" class="sl-btn blue">로그인</a>
      <a href="/api/member/signup" class="sl-btn blue">회원가입</a>
    </form>

    <% include ./footer.ejs %>
</body>

</html>